{{#if error}}
  <h1>Error: {{error}}</h1>
  <p>{{message}}</p>
{{else}}
  <div class="verification-container">
    <h1 class="verification-title">Welcome to Art Bazaar!</h1>
    <p class="verification-message">Congratulations! Your email address has been
      successfully verified.</p>
    <p class="verification-message">Your Art Bazaar account is now active and
      ready for you to explore.</p>
    <div class="verification-icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100"
        height="100"
        viewBox="0 0 100 100"
        fill="#ddd"
      >
        <circle cx="50" cy="50" r="50" fill="#ddd" />
        <path
          fill="#fff"
          d="M73.3 29.9L39 64.5 26.7 52.2 20 58.9 39 77.9 80 36.3z"
        />
      </svg>
    </div>
    <a href="http://localhost:5173" class="login-link">Login to start exploring
      Art Bazaar</a>
  </div>
{{/if}}